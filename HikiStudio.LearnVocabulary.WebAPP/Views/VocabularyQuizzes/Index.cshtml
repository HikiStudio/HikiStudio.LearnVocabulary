@using HikiStudio.LearnVocabulary.ViewModels.VocabularyTypes;

@{
    ViewData["Title"] = "Vocabulary Quizzes";

    var vocabularyTypes = ViewData["VocabularyTypes"] as List<VocabularyTypeViewModel>;
}

@section Header{
    <link href="~/assets/extensions/toastify-js/src/toastify.css" rel="stylesheet" />
    <link href="~/assets/extensions/datatables.net-bs5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/assets/extensions/datatables.net-bs5/css/select.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/assets/extensions/datatables.net-bs5/css/jquery.datatables.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet">

    <script src="~/assets/extensions/font-awesome/all.min.js"></script>
}

<div class="row">
    <div class="card w-100" style=" background: #5d87ff; color: white !important; box-shadow: none; ">
        <div class="card-body p-2 d-flex align-items-center justify-content-between">
            <h5 style="margin: 0px; font-size: 18px;color: white;" class="card-title fw-semibold">Vocabulary Quiz</h5>
            <div id="timer" style="padding: 5px 10px; background: white; color: black; font-weight: bold; border-radius: 20px">00:00:00</div>
        </div>
    </div>
</div>

<div class="row">
    <div class="card w-100" style="padding: 0px;">
        <div class="card-body" style="padding: 12px 0px;">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group mandatory">
                        <label for="vocabulary-type" class="form-label">Vocabulary Types</label>
                        <select class="form-select form-control" id="vocabulary-types">
                            @if (vocabularyTypes != null)
                            {
                                @foreach (var item in vocabularyTypes)
                                {
                                    <option value="@item.VocabularyTypeID">@item.VocabularyTypeName</option>
                                }
                            }
                        </select>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group mandatory">
                        <label for="vocabulary-start-index" class="form-label">Quiz Types</label>
                        <select class="form-select form-control" id="quiz-types">
                        </select>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group mandatory">
                        <label for="vocabulary-start-index" class="form-label">Vocabulary (Start Index)</label>
                        <input type="text" id="vocabulary-start-index" name="vocabulary-start-index" class="form-control" placeholder="Start Index" />
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group mandatory">
                        <label for="vocabulary-end-index" class="form-label">Vocabulary (End Index)</label>
                        <input type="text" id="vocabulary-end-index" name="vocabulary-end-index" class="form-control" placeholder="End Index" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex" style="gap: 15px;">
    <div style="flex: 60;">
        <div class="card">
            <div class="card-body p-2">
                <div class="d-flex align-items-center" style="justify-content: space-between;">
                    <div id="number-of-incorrect-answers">0</div>

                    <div class="d-flex justify-content-center" style="gap: 15px;">
                        <button id="start-quiz" type="button" class="btn btn-default btn-primary" style="font-weight: bold;">START</button>
                    </div>
                    
                    <div id="number-of-correct-answers">0</div>
                </div>
            </div>
        </div>

        <div id="block-quiz" style="display: none;">
            <div class="card">
                <div class="card-body p-2 d-flex" style="flex-direction: column; justify-content: center; align-items: center;">
                    <p id="vocabulary-word-question" style="margin-bottom: 5px; color: black; font-size: 13px; font-weight: bold;"></p>
                    <div class="row">
                        <a id="audio-vocabulary-word-question" href="javascript:void(0)" data-audioclipid="0" onclick="playAudio()" class="btn btn-info link-edit"
                           style="background: transparent; border: none; color: #004d5c; padding: 0px; font-size: 16px;">
                            <i class="fa-solid fa-volume" style="color: #646462;"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body p-2">
                    <div id="quiz-type-fill" style="padding: 0 20%; display: flex; justify-content: center;">
                        <input id="answer-vocabulary-word" style="min-width: 350px !important;" type="text" name="word" class="form-control" placeholder="Word" />
                        <button id="check-answer-vocabulary-word" autofocus type="button" class="btn btn-dark" style="font-weight: bold; margin-left: 20px;">CHECK</button>
                        <button id="show-answer-vocabulary-word" autofocus type="button" class="btn btn-success" style="font-weight: bold; margin-left: 20px; color: black;">SHOW</button>
                    </div>

                    <div id="quiz-type-choose" class="row">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card" style="flex: 40;">
        <div class="card-body p-2" style="max-height: calc(100vh - 300px); overflow: auto !important;">
            <table id="vocabularyWordHistoriesDatatable" class="table table-bordered dt-responsive nowrap" 
                width="100%" cellspacing="0" style="text-align: center">
                <thead>
                    <tr>
                        <th>NO.</th>
                        <th>Vocabulary Word</th>
                        <th>.:::.</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="modal text-left" data-bs-backdrop="static" data-bs-keyboard="false" id="modal-logs"
     tabindex="-1" role="dialog" aria-hidden="true" style="min-width:900px;">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document" style="min-width:900px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Course Learning Histories</h5>
                <button type="button" data-bs-dismiss="modal" class="close btn-close" aria-label="Close">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
            <div class="modal-body py-3">
                <div>
                    <table id="courseLearningLogs" class="table table-bordered dt-responsive nowrap"
                    width="100%" cellspacing="0" style="text-align: center">
                        <thead>
                            <tr>
                                <th>Learning Date</th>
                                <th>Quiz Type</th>
                                <th>Duration</th>
                                <th>Log</th>
                                <th>Score</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div onclick="modalDelete()" id="course-learing-log">
    <i class="fa-sharp fa-solid fa-clock-rotate-left" style="color: #f5f9ff; width: 20px; height: 20px;"></i>
</div>

<div style="display: none;">
    <audio id="audioPlayer" controls>
        <source src="" type="audio/mpeg">
    </audio>
</div>

<input hidden id="hdCourseID" value="@ViewBag.CourseID"/>

@section Footer{
    <script src="https://cdn.jsdelivr.net/npm/fireworks-js@2.x/dist/index.umd.js"></script>
    <script src="https://unpkg.com/fireworks-js@2.x/dist/index.umd.js"></script>
    <script src="~/assets/extensions/toastify-js/src/toastify.js"></script>
    <script src="~/assets/extensions/jquery/jquery.min.js"></script>
    <script src="~/assets/extensions/datatables/datatables.min.js"></script>
    <script src="~/assets/extensions/datatables/dataTables.select.min.js"></script>
    <script src="~/assets/extensions/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/js/pages/vocabulary-quizzes.js"></script>
}