@using HikiStudio.LearnVocabulary.ViewModels.VocabularyTypes;

@{
    ViewData["Title"] = "Vocabulary Words";

    var vocabularyTypes = ViewData["VocabularyTypes"] as List<VocabularyTypeViewModel>;
}

@section Header{
    <link href="~/assets/extensions/toastify-js/src/toastify.css" rel="stylesheet" />
    <link href="~/assets/extensions/datatables.net-bs5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/assets/extensions/datatables.net-bs5/css/select.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/assets/extensions/datatables.net-bs5/css/jquery.datatables.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet">

    <script src="~/assets/extensions/font-awesome/all.min.js"></script>
}

<div class="row">
    <div class="card w-100" style=" background: #5d87ff; color: white !important; box-shadow: none;">
        <div class="card-body p-2">
            <h5 style="padding: 3px 0px; margin: 0px; font-size: 18px;color: white;" class="card-title fw-semibold">Vocabulary Words</h5>
        </div>
    </div>
</div>

<div class="row">
    <div class="card w-100">
        <div class="card-body" style="padding: 12px 0px;">
            <div class="mb-2">
                <div class="d-flex btn-header gap-1">
                    <input type="text" class="form-control" id="search"
                           placeholder="Search" />

                    <button data-bs-toggle="modal"
                            id="btn-create"
                            data-bs-target="#modal-create"
                            class="btn btn-outline-primary text-nowrap icon-left">
                        <i class="bi bi-plus-lg"></i>
                        Create Vocabulary Word
                    </button>

                    <button data-bs-toggle="modal" style="display: none;"
                            data-bs-title="Delete selected lines"
                            id="btn-deletecheckall" disabled
                            data-bs-target="#modal-delete-multiple"
                            class="btn btn-danger text-nowrap icon-left">
                        <i class="bi bi-trash"></i>
                        Delete All
                    </button>
                </div>
            </div>
            <div class="timeline-widget mb-0 position-relative">
                <table id="vocabularyWordsDatatable" class="table table-bordered dt-responsive nowrap" width="100%" cellspacing="0" style="text-align: center">
                    <thead>
                        <tr>
                            <th data-orderable="false">
                                <input type="checkbox" id="checkbox-all" class="form-check-input bg-secondary" />
                            </th>
                            <th>Word</th>
                            <th>Definition</th>
                            <th>Pronunciation</th>
                            <th>Example Sentence</th>
                            <th>Date Created</th>
                            <th>Audio Clip</th>
                            <th data-orderable="false">
                                Action
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<!--Modal Create Vocabulary Word -->
<div class="modal fade text-left" data-bs-backdrop="static" data-bs-keyboard="false" id="modal-create" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable" role="document">
        <form class="form" method="post" id="form-create-vocabulary-word">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Create Vocabulary Word</h4>
                    <button type="button" class="close btn-close" id="cancel-create-vocabulary-word" aria-label="Close">
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mandatory">
                                <label for="word" class="form-label">Word</label>
                                <input type="text" id="word" autofocus name="word" class="form-control" placeholder="Word" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mandatory">
                                <label for="vocabulary-type" class="form-label">Vocabulary Types</label>
                                <select class="form-select form-control" id="vocabulary-types-create">
                                    @if (vocabularyTypes != null)
                                    {
                                        @foreach (var item in vocabularyTypes)
                                        {
                                            <option value="@item.VocabularyTypeID">@item.VocabularyTypeName</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6" style="margin-top: 10px;">
                            <div class="form-group mandatory">
                                <label for="definition" class="form-label">Definition</label>
                                <input type="text" id="definition" name="definition" class="form-control" placeholder="Definition" />
                            </div>
                        </div>

                        <div class="col-md-6" style="margin-top: 10px;">
                            <div class="form-group mandatory">
                                <label for="pronunciation" class="form-label">Pronunciation</label>
                                <input type="text" id="pronunciation" name="pronunciation" class="form-control" placeholder="Pronunciation" />
                            </div>
                        </div>

                        <div class="col-md-6" style="margin-top: 10px;">
                            <div class="form-group">
                                <label for="example-sentence" class="form-label">Example Sentence</label>
                                <input type="text" id="example-sentence" name="example-sentence" class="form-control" placeholder="Example Sentence" />
                            </div>
                        </div>

                        <div class="col-md-6" style="margin-top: 10px;">
                            <div class="form-group">
                                <label for="example-sentence-meaning" class="form-label">Example Sentence Meaning</label>
                                <input type="text" id="example-sentence-meaning" name="example-sentence-meaning" class="form-control" placeholder="Example Sentence Meaning" />
                            </div>
                        </div>

                        <div class="col-md-6" style="margin-top: 10px;">
                            <div class="form-group">
                                <label for="synonyms" class="form-label">Synonyms</label>
                                <input type="text" id="synonyms" name="synonyms" class="form-control" placeholder="Synonyms" />
                            </div>
                        </div>

                        <div class="col-md-6" style="margin-top: 10px;">
                            <div class="form-group">
                                <label for="antonyms" class="form-label">Antonyms</label>
                                <input type="text" id="antonyms" name="antonyms" class="form-control" placeholder="Antonyms" />
                            </div>
                        </div>

                        <div class="col-md-6" style="margin-top: 10px;">
                            <div class="form-group mandatory">
                                <label for="joined-date" class="form-label">Date Created</label>
                                <input type="date" id="CreateDate" name="CreateDate" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="submit-create-vocabulary-word" style="width: 80px;" class="btn btn-primary">Save</button>
                    <button type="button" id="cancel-create-vocabulary-word" style="width: 80px;" class="btn btn-outline-dark">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!--Modal Update Vocabulary Word -->
