    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable" role="document">
        <form class="form" id="form-edit-vocabulary-word">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Update Vocabulary Word</h4>
                    <button type="button" class="close btn-close" id="cancel-edit-vocabulary-word" aria-label="Close">
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mandatory">
                                <label for="word" class="form-label">Word</label>
                                <input type="text" id="word" autofocus name="word" class="form-control" placeholder="Word" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mandatory">
                                <label for="vocabulary-type" class="form-label">Vocabulary Types</label>
                                <select class="form-select form-control" name="vocabulary-types-update" id="vocabulary-types-update">
                                    @if (vocabularyTypes != null)
                                    {
                                        @foreach (var item in vocabularyTypes)
                                        {
                                            <option value="@item.VocabularyTypeID">@item.VocabularyTypeName</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6" style="margin-top: 10px;">
                            <div class="form-group mandatory">
                                <label for="definition" class="form-label">Definition</label>
                                <input type="text" id="definition" name="definition" class="form-control" placeholder="Definition" />
                            </div>
                        </div>

                        <div class="col-md-6" style="margin-top: 10px;">
                            <div class="form-group mandatory">
                                <label for="pronunciation" class="form-label">Pronunciation</label>
                                <input type="text" id="pronunciation" name="pronunciation" class="form-control" placeholder="Pronunciation" />
                            </div>
                        </div>

                        <div class="col-md-6" style="margin-top: 10px;">
                            <div class="form-group">
                                <label for="example-sentence" class="form-label">Example Sentence</label>
                                <input type="text" id="example-sentence" name="example-sentence" class="form-control" placeholder="Example Sentence" />
                            </div>
                        </div>

                        <div class="col-md-6" style="margin-top: 10px;">
                            <div class="form-group">
                                <label for="example-sentence-meaning" class="form-label">Example Sentence Meaning</label>
                                <input type="text" id="example-sentence-meaning" name="example-sentence-meaning" class="form-control" placeholder="Example Sentence Meaning" />
                            </div>
                        </div>

                        <div class="col-md-6" style="margin-top: 10px;">
                            <div class="form-group">
                                <label for="synonyms" class="form-label">Synonyms</label>
                                <input type="text" id="synonyms" name="synonyms" class="form-control" placeholder="Synonyms" />
                            </div>
                        </div>

                        <div class="col-md-6" style="margin-top: 10px;">
                            <div class="form-group">
                                <label for="antonyms" class="form-label">Antonyms</label>
                                <input type="text" id="antonyms" name="antonyms" class="form-control" placeholder="Antonyms" />
                            </div>
                        </div>

                        <div class="col-md-6" style="margin-top: 10px;">
                            <div class="form-group mandatory">
                                <label for="joined-date" class="form-label">Date Created</label>
                                <input type="date" id="date-created" name="date-created" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="submit-edit-vocabulary-word" style="width: 80px;" class="btn btn-primary">Save</button>
                    <button type="button" id="cancel-edit-vocabulary-word" style="width: 80px;" class="btn btn-outline-dark">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!--Modal Delete Vocabulary Word In Line-->
<div class="modal text-left" data-bs-backdrop="static" data-bs-keyboard="false" id="modal-delete"
     tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Vocabulary Word </h5>
                <button type="button" data-bs-dismiss="modal" class="close btn-close" aria-label="Close">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
            <div class="modal-body py-3">
                <div class="d-flex align-items-center">
                    <div class="icon-modal">
                        <i class="bi bi-exclamation-triangle"></i>
                    </div>
                    <div>
                        <p class="mb-0">Are you sure that you want to delete <span style="color: red; font-weight: bold;" id="vocabularyWordIDDelete"></span>?</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="btn-delete" class="btn btn-primary" style="width: 80px;">OK</button>
                <button type="button" data-bs-dismiss="modal" class="btn btn-outline-dark" style="width: 80px;">
                    <span class="d-none d-sm-block">Cancel</span>
                </button>
            </div>
        </div>
    </div>
</div>

<div style="display: none;">
    <audio id="audioPlayer" controls>
        <source src="" type="audio/mpeg">
    </audio>
</div>


@section Footer{
    <script src="~/assets/extensions/toastify-js/src/toastify.js"></script>
    <script src="~/assets/extensions/jquery/jquery.min.js"></script>
    <script src="~/assets/extensions/datatables/datatables.min.js"></script>
    <script src="~/assets/extensions/datatables/dataTables.select.min.js"></script>
    <script src="~/assets/extensions/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/js/pages/vocabulary-words.js"></script>
}